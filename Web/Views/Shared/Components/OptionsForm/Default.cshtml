@using HashCore

@model GeneratorConfig

<form>
    <div class="form-group">
        <input id="count" class="form-control" name="@nameof(GeneratorConfig.Count)" type="number" min="0" value="1000" />
        <label for="count">Count</label>
    </div>

    <div class="form-group">
        <input id="or"  class="form-check-input" name="@nameof(GeneratorConfig.Or)" type="checkbox" value="true" />
        <label for="or">Or</label>
    </div>
       <div class="form-group">
        <input id="add"  class="form-check-input" name="@nameof(GeneratorConfig.Add)" type="checkbox" value="true" />
        <label for="count">Add</label>
    </div>

    <div class="form-group">
        <input id="subtract"  class="form-check-input" name="@nameof(GeneratorConfig.Subtract)" type="checkbox" value="true" />
        <label for="subtract">Subtract</label>
    </div>

    <div class="form-group">
        <input id="xor" class="form-check-input"  name="@nameof(GeneratorConfig.Xor)" type="checkbox" value="true" />
        <label for="xor">Xor</label>
    </div>

      <div class="form-group">
        <input id="l-shift-xor"  class="form-check-input" name="@nameof(GeneratorConfig.LShiftXor)" type="checkbox" value="true" />
        <label for="l-shift-xor">L shift xor</label>
    </div>
    
      <div class="form-group">
        <input id="r-shift-xor"  class="form-check-input" name="@nameof(GeneratorConfig.RShiftXor)" type="checkbox" value="true" />
        <label for="r-shift-xor">R shift xor</label>
    </div>

     <div class="form-group">
        <input id="l-shift-subtract"  class="form-check-input" name="@nameof(GeneratorConfig.LShiftSubtract)" type="checkbox" value="true" />
        <label for="l-shift-subtract">L shift subtract</label>
    </div>

     <div class="form-group">
        <input id="l-shift-add" class="form-check-input"  name="@nameof(GeneratorConfig.LShiftAdd)" type="checkbox" value="true" />
        <label for="l-shift-add">L shift add</label>
    </div>

    <button  class="btn btn-primary" type="submit">Start</button>
</form>