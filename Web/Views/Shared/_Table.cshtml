@{
    string style = (bool)(ViewData["scrollable"]) ? "max-height: 200px; overflow-y: overlay" : null;
}

<div id="@ViewData["id"]">
    <h4 class="text-center">@ViewData["name"]</h4>
    <div style="@style">
        <table class="table">
            <thead style="position:sticky; top:0; background: white">
                <tr>
                    <th scope="col">Text</th>
                    <th scope="col">Effect</th>
                <tr/>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

</div>